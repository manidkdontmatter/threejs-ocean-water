{
  "name": "web-ocean-water",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./math": {
      "types": "./dist/math.d.ts",
      "import": "./dist/math.js",
      "require": "./dist/math.cjs"
    },
    "./sky": {
      "types": "./dist/sky.d.ts",
      "import": "./dist/sky.js",
      "require": "./dist/sky.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "tsup",
    "build:demo": "tsc --noEmit && vite build --outDir demo-dist",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test:follow-snap": "node scripts/test-follow-snap.mjs"
  },
  "keywords": [
    "three",
    "threejs",
    "ocean",
    "water",
    "shader",
    "buoyancy"
  ],
  "author": "",
  "license": "ISC",
  "description": "Reusable Three.js ocean/water system with deterministic wave sampling and optional sky dome.",
  "peerDependencies": {
    "three": "^0.183.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.1",
    "@types/three": "^0.183.1",
    "lil-gui": "^0.21.0",
    "playwright": "^1.58.2",
    "three": "^0.183.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
